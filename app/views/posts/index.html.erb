<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1><br />
</div>
<h3><%= @posts.title %></h3></br />
<p><%= @posts.message %></p>


<% if user_signed_in? %>
	<% if current_user.has_role? :admin %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>

<% end %>
<% end %>
